<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}Spotizer c'est super{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap.min.css') }}" />
</head>
<body>
    {{ include('AppBundle::_menu.html.twig', {'page_title': block('title')}) }}

    {% for type, flashes in app.session.flashBag.all() %}
        {% for flash in flashes %}
            <div class="alert alert-{{ type }}">
                {{ flash }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container">
        {% block content %}{% endblock %}
    </div>


    <script type="application/javascript" src="{{ asset('bundles/app/js/bootstrap.js') }}"></script>
</body>
</html>